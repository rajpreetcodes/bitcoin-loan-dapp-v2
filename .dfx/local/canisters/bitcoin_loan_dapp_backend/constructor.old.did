type Loan = record {
  id : nat64;
  owner : principal;
  collateral_amount : float64;
  loan_amount : float64;
  created_at : nat64;
};

type Result_1 = variant {
  Ok : null;
  Err : text;
};

type Result_Loan = variant {
  Ok : Loan;
  Err : text;
};

service : {
  create_loan : (float64, float64) -> (Result_Loan);
  get_loans : () -> (vec Loan) query;
  get_btc_address : () -> (opt text) query;
  link_btc_address : (text) -> (Result_1);
  health : () -> (text) query;
}
